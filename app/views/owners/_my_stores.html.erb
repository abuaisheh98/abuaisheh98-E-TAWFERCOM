<section class="attendance">
  <div class="attendance-list">
    <h1>My Stores</h1>
    <%= link_to "Create Store", new_store_path, style: "color: #0D98BA" %>
    <table class="table">
      <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>User</th>
        <th>Created At</th>
      </tr>
      </thead>
      <tbody>
          <% @stores.each do |store|  %>
            <tr>
              <td><%= store.id %></td>
              <td><%= store.name %></td>
              <td><%= store.user_id %></td>
              <td><%= store.created_at %></td>
            </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</section>