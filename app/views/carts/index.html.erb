<!-- Breadcrumb Start -->
<div class="container-fluid">
  <div class="row px-xl-5">
    <div class="col-12">
      <nav class="breadcrumb bg-light mb-30">
        <a class="breadcrumb-item text-dark" href="#">Home</a>
        <a class="breadcrumb-item text-dark" href="#">Shop</a>
        <span class="breadcrumb-item active">Shopping Cart</span>
      </nav>
    </div>
  </div>
</div>
<!-- Breadcrumb End -->

<!-- Cart Start -->
<div class="container-fluid">
  <div class="row px-xl-5">
    <div class="col-lg-8 table-responsive mb-5">
      <table class="table table-light table-borderless table-hover text-center mb-0">
        <thead class="thead-dark">
        <tr>
          <th>Products</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total</th>
          <th>Remove</th>
        </tr>
        </thead>
        <tbody class="align-middle">
        <% prices = [] %>
        <% @cart.each do |item| %>
          <tr>
          <td class="align-middle" style="justify-content: center;"><%=image_tag(handle_url(item["product"].image_url),style: "width: 50px; height:50px") %> <p><%= item["product"].name %></p></td>
          <td class="align-middle">$<%= item["product"].price %></td>
          <td class="align-middle">
            <div class="input-group quantity mx-auto" style="width: 100px;">
              <div class="input-group-btn">
                <%= button_to Hash[:product => (item["product"].id), controller: :static_pages,action: :remove_from_cart,method: :post], Hash[class: "btn btn-sm btn-primary btn-plus"] do %>
                  <i class="fa fa-minus"></i>
                <% end %>
              </div>
              <input type="number" disabled class="form-control form-control-sm bg-secondary border-0 text-center" value= <%= item["quantity"] %> >
              <div class="input-group-btn">
                <%= link_to Hash[:product => (item["product"].id), controller: :static_pages,action: :add_to_cart], Hash[:class => "btn btn-sm btn-primary btn-plus"] do %>
                  <i class="fa fa-plus"></i>
                <% end %>
              </div>
            </div>
          </td>
            <% total= item["product"].price * item["quantity"]; prices << total %>
          <td class="align-middle"><%= total %></td>
          <td class="align-middle"><button class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button></td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-4">
      <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Cart Summary</span></h5>
      <div class="bg-light p-30 mb-5">
        <div class="border-bottom pb-2">
          <div class="d-flex justify-content-between mb-3">
            <h6>Subtotal</h6>
            <h6><%= @sub_total %></h6>
          </div>
          <div class="d-flex justify-content-between">
            <h6 class="font-weight-medium">Shipping</h6>
            <h6 class="font-weight-medium">$10</h6>
          </div>
        </div>
        <div class="pt-2">
          <div class="d-flex justify-content-between mt-2">
            <h5>Total</h5>
            <h5><%= @sub_total + 10 %></h5>
          </div>
          <%= link_to "Proceed To Checkout", carts_checkout_path,{class: "btn btn-block btn-primary font-weight-bold my-3 py-3"} %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Cart End -->