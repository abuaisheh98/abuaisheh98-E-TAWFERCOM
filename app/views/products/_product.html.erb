<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Production dste:</strong>
    <%= product.production_dste %>
  </p>

  <p>
    <strong>Expiry date:</strong>
    <%= product.expiry_date %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= product.image %>
  </p>

  <p>
    <strong>Stock quantity:</strong>
    <%= product.stock_quantity %>
  </p>

  <p>
    <strong>Store:</strong>
    <%= product.store_id %>
  </p>

</div>
