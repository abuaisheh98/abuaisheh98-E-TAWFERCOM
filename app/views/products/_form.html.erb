<%= form_with(model: product, html:{multipart: true }) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="attendance-list">
    <%= form.text_field :name, placeholder: :name %>
  </div>

  <div class="attendance-list">
    <%= form.text_field :price, placeholder: :price %>
  </div>

  <div class="attendance-list">
    <%= form.text_area :description, placeholder: :description %>
  </div>

  <div class="attendance-list">
    <%= form.date_field :production_dste, placeholder: :production_dste %>
  </div>

  <div class="attendance-list">
    <%= form.date_field :expiry_date, placeholder: :expiry_date %>
  </div>

  <div class="attendance-list">
    <%= form.file_field :image, accept: "image/png, image/jpeg"%>
  </div>

  <div class="attendance-list">
    <%= form.number_field :stock_quantity, placeholder: :stock_quantity %>
  </div>

  <div class="attendance-list">
    <%= form.text_field :store_id, placeholder: :store_id %>
  </div>

  <div class="attendance-list" style="background-color: #1c7430; padding-left: 600px">
    <%= form.submit %>
  </div>
<% end %>
