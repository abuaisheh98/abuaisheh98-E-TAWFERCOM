            </div>
          </div>
          <div class="text-center py-4">
            <a class="h6 text-decoration-none text-truncate" href=""><%= product.name %></a>
            <div class="d-flex align-items-center justify-content-center mt-2">
              <h5>$<%= product.price %></h5>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
