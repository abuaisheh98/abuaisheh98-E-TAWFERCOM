<div class="main-top">
  <h1>Costumers</h1>
  <%= link_to admins_new_user_path(:role => "costumer") do %>
    <i class="fas fa-user-plus"></i>
  <% end %>
</div>
<div class="users">
  <% unless @costumers.nil? || @costumers.count <= 1 %>
    <% @costumers.each do |costumer| %>
      <div class="card">
        <%= image_tag('profile.png') %>
        <h4><%= costumer.name %></h4>
        <p><%= costumer.role %></p>
        <%= link_to 'Update', edit_user_path(costumer)%>
        <%= button_to 'Delete', admins_destroy_path(costumer), method: :delete%>
      </div>
    <% end %>
  <% end %>
</div>