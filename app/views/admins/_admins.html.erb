<div class="main-top">
  <h1>Admins</h1>
  <%= link_to admins_new_user_path(:role => "admin"),style: "margin_left:1550px" do %>
    <i class="fas fa-user-plus"></i>
  <% end %>
</div>
<div class="users">
  <% unless @admins.nil? || @admins.count <= 1 %>
    <% @admins.each do |admin| %>
      <div class="card">
        <%= image_tag('profile.png') %>
        <h4><%= admin.name %></h4>
        <p><%= admin.role %></p>
        <%= link_to 'Update', edit_user_path(admin)%>
        <%= button_to 'Delete', root_path%>
      </div>
    <% end %>
  <% end %>
</div>