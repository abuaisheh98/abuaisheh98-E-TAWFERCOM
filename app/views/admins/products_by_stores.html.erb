<div class="container" style="display:flex; flex-wrap: wrap; width: 100%">
  <section class="main">
    <div class="main-top">
      <h1>Categories</h1>
      <%= link_to new_category_path do %>
        <i class="fas fa-user-plus"></i>
      <% end %>
    </div>
    <div class="users" style="display:flex; flex-wrap: wrap; width: 100%">
      <% @products_by_store.each do |product| %>
        <div class="card" >
          <%= image_tag('profile.png') %>
          <h4><%= product.name %></h4>
          <p><%= product.price %></p>
          <%= button_to 'Update', root_path%>
          <%= button_to 'Delete', root_path%>
        </div>
      <% end %>
    </div>
  </section>
</div>
